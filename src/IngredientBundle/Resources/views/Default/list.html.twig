{% extends 'base.html.twig' %}

{% block title %}Ingredients List{% endblock %}

{% block body %}
    <div class="container popover-content">
        <div class="row">
            <div class="col-6 col-md-6">
                <div>
                    <h2>Ingredients List</h2>
                    <table class="table">
                        <thead>
                        <tr>
                            <td>Name</td>
                            <td>Cost</td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <td>Action</td>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in results %}
                            <tr>
                                <td>{{ item['name'] }}</td>
                                <td>{{ item['cost'] }}</td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td><a href="{{ path('edit_ingredient', {'id': item['id']}) }}" onclick="return confirm('Are u sure?')">Edit</a></td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}