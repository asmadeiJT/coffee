<div>
    <h2>Last 10 coffee cups</h2>
    <table class="table">
        <thead>
        <tr>
            <td>Coffee addict Name</td>
            <td>Cost</td>
            <td>Date</td>
            <td>Action</td>
        </tr>
        </thead>
        <tbody>
        {% for item in results %}
            <tr>
                <td>{{ item['name'] }}</td>
                <td>{{ item['cost']/100 }}</td>
                <td>{{ item['create_date']|date("m/d/Y h:i:s") }}</td>
                <td><a href="{{ path('delete_cup', {'id': item['id']}) }}" onclick="return confirm('are u sure?')">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if(cups_count) %}
        <h2>Total cups: {{ cups_count }}</h2>
    {% endif %}
    {% if(total_spent) %}
        <h2>Total spent: {{ total_spent['totalSpent']/100 }} р.</h2>
    {% endif %}
    {% if(balance) %}
        <h2>Balance: {{ balance/100 }} р.</h2>
    {% endif %}
    <h2>Credit: {{ credit/100 }} р.</h2>
    <h2>Profit: {{ profit/100 }} р.</h2>
</div>